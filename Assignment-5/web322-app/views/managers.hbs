<div class="row">
    <div class="col-md-12">
        <h2>Managers <a href="/managers/add" class="btn btn-success pull-right">Add New Manager</a></h2>
        <hr />

        <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Emp #</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Status</th>
                        <th>Department</th>
                        <th>Hire Date</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each managers}}
                    <tr>
                        <td><strong>{{employeeNum}}</strong></td>
                        <td><a href="/employee/{{employeeNum}}">{{firstName}}&nbsp;{{lastName}}</a></td>
                        <td><a href="mailto:{{email}}">{{email}}</a></td>
                        <td>{{addressStreet}}&nbsp;{{addressCity}}&nbsp;{{addressState}}&nbsp;{{adderssPostal}}</td>
                        <td><a href="/employees?status={{status}}">{{status}}</a></td>
                        <td><a href="/employees?department={{department}}">{{department}}</a></td>
                        <td>{{hireDate}}</td>
                        <td><a href="/managers/delete/{{employeeNum}}" class="btn btn-danger pull-right">Remove</a>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{#unless managers}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/unless}}
    </div>
</div>